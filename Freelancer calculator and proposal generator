<body>

<h1>Freelancer Proposal Calculator</h1>
<p style="text-align:center;">Estimate project cost, price range, and auto-generate a professional proposal draft.</p>

<div class="field">
  <label>Client Name:
    <span class="tooltip">Add the name of the client if available (personal touch improves response).</span>
  </label>
  <input type="text" id="clientName" placeholder="e.g., Joseph">
</div>

<div class="field">
  <label>Project Name:
    <span class="tooltip">Describe the project briefly (e.g., Email Copywriting, Logo Design).</span>
  </label>
  <input type="text" id="projectName" placeholder="e.g., Email Copywriting Project">
</div>

<div class="field">
  <label>Hourly Rate ($):
    <span class="tooltip">Your rate per hour of work. Example: 25, 35, or 50 USD.</span>
  </label>
  <input type="number" id="rate" value="35">
</div>

<div class="field">
  <label>Number of Tasks:
    <span class="tooltip">How many separate tasks or steps are involved in the project?</span>
  </label>
  <input type="number" id="numTasks" value="3" min="1">
</div>

<div id="tasksContainer"></div>

<button onclick="generateTaskInputs()">Update Tasks</button>
<button onclick="calculateTotal()">Calculate Proposal</button>

<div class="results">
  <h2>Calculation Results</h2>
  <p><strong>Total Proposal Price:</strong> $<span id="total">0</span></p>
  <p><strong>Suggested Price Range:</strong> $<span id="priceRange">0 - 0</span></p>
</div>

<div class="proposal-box">
  <h3>Generated Proposal Draft</h3>
  <p id="proposalText">Your proposal will appear here after calculation.</p>
</div>

<script>
const tasksContainer = document.getElementById('tasksContainer');

function generateTaskInputs() {
  tasksContainer.innerHTML = '';
  const numTasks = parseInt(document.getElementById('numTasks').value);
  for (let i = 1; i <= numTasks; i++) {
    const div = document.createElement('div');
    div.className = 'task';
    div.innerHTML = `
      <label>Task ${i} Description:</label>
      <input type="text" id="taskDesc${i}" placeholder="Describe task ${i}">
      <label>Task ${i} Hours:</label>
      <input type="number" id="taskHours${i}" value="2" min="0">
    `;
    tasksContainer.appendChild(div);
  }
}

function calculateTotal() {
  const clientName = document.getElementById('clientName').value.trim() || "Client";
  const projectName = document.getElementById('projectName').value.trim() || "Your Project";
  const rate = parseFloat(document.getElementById('rate').value);
  const numTasks = parseInt(document.getElementById('numTasks').value);

  let total = 0;
  let taskList = [];
  for (let i = 1; i <= numTasks; i++) {
    const desc = document.getElementById(`taskDesc${i}`).value || `Task ${i}`;
    const hours = parseFloat(document.getElementById(`taskHours${i}`).value) || 0;
    taskList.push(`${desc} (${hours} hrs)`);
    total += rate * hours;
  }

  // Price range: 80% to 120% of calculated total
  const minPrice = (total * 0.8).toFixed(2);
  const maxPrice = (total * 1.2).toFixed(2);

  document.getElementById('total').innerText = total.toFixed(2);
  document.getElementById('priceRange').innerText = `${minPrice} - ${maxPrice}`;

  // Auto-generate proposal
  const proposal = `
Hi ${clientName},

I’ve reviewed the details of your ${projectName}. Based on the scope, I’ve estimated the following tasks: ${taskList.join(", ")}. With my experience in handling similar projects, I can ensure professional results within your expected timeline.

My proposed total for this project is $${total.toFixed(2)}, which generally falls within the range of $${minPrice} – $${maxPrice}. I am confident in delivering high-quality work and am open to discussing any adjustments you’d like.

Looking forward to collaborating on this project.

Best regards,  
[Your Name]
  `;
  document.getElementById('proposalText').innerText = proposal;
}

// Initialize default task inputs
generateTaskInputs();
</script>

